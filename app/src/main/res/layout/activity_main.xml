<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/pokazZdjecie"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zdjęcie"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nazwisko"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imię"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Urodzony"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wydział"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Srednia"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/noweZdjecie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="zdjęcie"/>
            <EditText
                android:id="@+id/noweNazwisko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nazwisko"/>
            <EditText
                android:id="@+id/noweImie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Imię"/>
            <EditText
                android:id="@+id/noweUrodzony"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Urodzony"/>
            <EditText
                android:id="@+id/noweWydzial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wydział"/>
            <EditText
                android:id="@+id/noweSrednia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Srednia"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/pokazListe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż listę"
            android:onClick="pokazListe"/>

        <Button
            android:id="@+id/zapisz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz"
            android:onClick="zapiszNowyRekord"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/zdjecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zdjęcie"
            android:onClick="pokazZdjecie"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/pokaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż liczbę wierszy"
            android:onClick="podajLiczbe"/>

        <Button
            android:id="@+id/wypelnienie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wstępne wypełnienie"
            android:onClick="zapisPoczątkowy"/>

        <TextView
            android:id="@+id/liczbaWieszy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFO"
            android:textSize="30dp"
            android:textColor="@color/design_default_color_error"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dobrzy/Wszyscy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wydziały"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>